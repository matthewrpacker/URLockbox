<div class="container center">
  <div class="row">
    <%= form_for [current_user, @link] do |f| %>
    <%= f.text_field :title, placeholder: "Title" %>
    <br>
    <%= f.text_field :url, placeholder: "URL" %>
    <br>
    <%= f.submit "Submit", class: "btn btn-primary btn-sm", method: :post %>
    <% end %><br>
    <h2>All Links</h2>
  </div>
  <div class="row center-table">
    <input id="typed" placeholder="Search by title or url">
    <button type="button" name="button" class="filter-read btn btn-warning btn-xs">Filter Read</button>
    <button type="button" name="button" class="filter-unread btn btn-warning btn-xs">Filter Unread</button>
    <table id="linkTable">
      <thead>
        <tr>
          <th>Title</th>
          <th>URL</th>
          <th>Status</th>
          <th>Modify Status</th>
          <th>Edit Link</th>
        </tr>
      </thead>

      <tbody id="searchBody">
        <% @links.each do |link| %>
        <tr class="<%= link.type %>" data-link-id="<%= link.id %>">
          <td><%= link_to "#{link.title}", link.url %></td>
          <td><%= link_to "#{link.url}", link.url %></td>
          <td><%= link.type %></td>
          <td><button type="button" name="button" class="toggle btn btn-primary btn-xs"> <%= link.status %> </button></td>
          <td> <%= link_to "Edit Link", edit_user_link_path(current_user, link), class: "btn btn-primary btn-xs" %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
