<div class="container center">
  <h1>Login</h1>
  <br>
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :email, placeholder: "Email" %>
    <br>
    <%= f.password_field :password, placeholder: "Password" %>
    <br>
    <%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
</body>
